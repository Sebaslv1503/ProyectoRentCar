@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "~/Views/Shared/_LayoutInicio.cshtml";
}

<div class="container">
    <div class="left-side">
        <h1>Bienvenido a RentaCar</h1>
        <p class="animate__animated animate__fadeInLeft animate__delay-4s">
            Accede a tu cuenta para explorar nuestra flota de vehículos y disfrutar de una experiencia de renta rápida y segura. Tu viaje comienza aquí.
        </p>
    </div>
    <div class="right-side">
        <div class="login-container">
            <div class="login-header">
                <h1>🚗 RentCar</h1>
                <p>Inicia sesión para gestionar tus reservas y vehículos</p>
            </div>

            <form id="frmLogin" class="login-form">
                <div class="form-group">
                    <label for="nombreUsuario">Correo electrónico:</label>
                    <input type="text" id="nombreUsuario" name="nombreUsuario"
                           class="form-control" required placeholder="Ingresa tu correo electrónico" />
                    <i class="fas fa-envelope"></i>
                </div>

                <div class="form-group">
                    <label for="password">Contraseña:</label>
                    <input type="password" id="password" name="passwordHash"
                           class="form-control" required placeholder="Ingresa tu contraseña" />
                    <i class="fas fa-lock"></i>
                </div>

                <button type="button" onclick="verificarUsuarioJS()" class="login-btn">
                    Iniciar Sesión
                </button>

                <div class="links">
                    
                    <a asp-controller="Usuario" asp-action="Registrar">Crear una cuenta</a>
                </div>
            </form>

            <div class="social-login">
                <p>O inicia sesión con:</p>
                <div class="social-icons">
                    <a href="#" title="Facebook" class="fa-brands fa-facebook"></a>
                    <a href="#" title="Google" class="fa-solid fa-g"></a>
                    <a href="#" title="Twitter" class="fa-brands fa-x-twitter"></a>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="~/js/usuario.js"></script>
<script src="~/js/queries.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>